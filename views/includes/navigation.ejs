

<header class="header menu_2">
    <div id="preloader"><div data-loader="circle-side"></div></div><!-- /Preload -->
    <div id="logo">
        <a href="/index"><img src="/img/varsityLogo.png" width="60" height="60" data-retina="true" alt=""></a>
    </div>

    <ul id="top_menu">
        <li><a href="/login" class="login">Login</a></li>
        <li><a href="#0" class="search-overlay-menu-btn">Search</a></li>
        <li class="hidden_tablet"><a href="/about" class="btn_1 rounded">About</a></li>
    </ul>
    <!-- /top_menu -->
    <a href="#menu" class="btn_mobile">
        <div class="hamburger hamburger--spin" id="hamburger">
            <div class="hamburger-box">
                <div class="hamburger-inner"></div>
            </div>
        </div>
    </a>
    <nav id="menu" class="main-menu">
        <ul>
            <li><span><a href="/index">Home</a></span></li>
            <li><span><a href="#0">Course & Others</a></span>
                <ul>
                    <li><a href="/courses">Courses </a></li>
                    <li><a href="/teachers">Teacher List</a></li>
                    <li><a href="/students">Studnet List</a></li>
                </ul>
            </li>
            <li><span><a href="#0">Pages</a></span>
                <ul>
                    <li><a href="/about">About</a></li>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/signup-student"> Register (students)</a></li>
                    <li><a href="/signup-student"> Register (teacher)</a></li>
                    <li><a href="/contacts">Contacts</a></li>
                    <li><a href="/faq">Faq</a></li>
                </ul>
            </li>


            <% if (typeOfUser === 'admin') { %>
                <li><span><a class="<%= path === '/admin/add-course' ? 'active' : '' %>" href="/admin/add-course">Add Course</a></span></li>

                <li><span><a class="<%= path === '/admin/courses' ? 'active' : '' %>" href="/admin/courses">Courses</a></span></li>
            <% } %>

            <% if (typeOfUser === 'student') { %>

                <li><span><a href="#0">Project-Thesis</a></span>
                    <ul>
                        <li><span><a class="<%= path === '/student/add-project' ? 'active' : '' %>" href="/student/add-project">Add Project</a></span></li>

                        <li><span><a class="<%= path === '/student/projects' ? 'active' : '' %>" href="/student/projects">Projects</a></span></li>

                        <li><span><a class="<%= path === '/student/apply-for-thesis' ? 'active' : '' %>" href="/student/apply-for-thesis">Apply for Thesis</a></span></li>

                        <li><span><a class="<%= path === '/student/courses' ? 'active' : '' %>" href="/student/courses">Courses</a></span></li>
                    </ul>
                </li>

                
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">


            <% if (!isAuthenticated) { %>
                <li><span><a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a></span></li>

                <li><span><a class="<%= ((path === '/signup-student') || (path === '/signup-teacher')) ? 'active' : '' %>" href="/signup-student">SignUp</a></span></li>
            <% } else { %>

                <li><span>
                    <a class="<%= ((path === '/user') || (path === '/student/studentProfile') || (path === '/teacher/teacherProfile') || (path === '/admin/indexPage')) ? 'active' : '' %>" href="/user">
                        <h3 style="color: forestgreen;"><%= currentUserName %></h3>
                    </a>
                </span></li>
                
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn btn_light" type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
    <!-- Search Menu -->
    <div class="search-overlay-menu">
        <span class="search-overlay-close"><span class="closebt"><i class="ti-close"></i></span></span>
        <form role="search" id="searchform" method="get">
            <input value="" name="q" type="search" placeholder="Search..." />
            <button type="submit"><i class="icon_search"></i>
            </button>
        </form>
    </div><!-- End Search Menu -->
</header>





























