<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../../includes/navigation.ejs') %>

            <main>
                <% if (students.length > 0) { %>
                    <div class="grid">
                        <% for (let student of students) { %>
                            <article class="card student-item">
                                <header class="card__header">
                                    <h1 class="student__name">
                                        <%= student.name %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="student__email">
                                        <%= student.email %>
                                    </h2>
                                    <h3 class="student__email">
                                        <%= student.regNo %>
                                    </h3>
                                    <h3 class="student__email">
                                        <%= student.phone %>
                                    </h3>
                                    <p class="student__description">
                                        <%= student.department %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-student/<%= student._id %>?edit=true" class="btn">Edit</a> 
                                    <form action="/admin/delete-student" method="POST">
                                        <input type="hidden" value="<%= student._id %>" name="studentId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                                
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No students Found!</h1>
                        <% } %>
            </main>
            <%- include('../../includes/end.ejs') %>