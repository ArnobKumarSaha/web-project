<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/student.css">
</head>

<body>
   <%- include('../../includes/navigation.ejs') %>

    <main>
        <form class="student-form" action="/admin/<% if (editing) { %>edit-student<% } else { %>add-student<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= student.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="regNo">Registration No.</label>
                <textarea name="regNo" id="regNo" rows="5"><% if (editing) { %><%= student.regNo %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" value="<% if (editing) { %><%= student.email %><% } %>">
            </div>
            <div class="form-control">
                <label for="phone">Phone</label>
                <input type="text" name="phone" id="phone" value="<% if (editing) { %><%= student.phone %><% } %>">
            </div>
            <div class="form-control">
                <label for="department">Department</label>
                <input type="text" name="department" id="department" value="<% if (editing) { %><%= student.department %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= student._id %>" name="studentId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update student<% } else { %>Add student<% } %></button>
        </form>
    </main>
<%- include('../../includes/end.ejs') %>