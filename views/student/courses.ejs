<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/project.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <section id="hero_in" class="general">
                    <div class="wrapper">
                        <div class="container">
                            <h1 class="fadeInUp"><span></span>Courses</h1>
                        </div>
                    </div>
                </section>
                <div class="card__actions">
                    <a href="/student/register-to-course" class="btn">Register to a course now.</a> 
                    <% if(isMine == true){ %>
                        <a href="/student/courses" class="btn">See everyone's courses</a> 
                    <% } else { %>
                        <a href="/student/mycourses" class="btn">See only my courses</a> 
                    <% } %>
                </div>

                <% if (courses.length > 0) { %>
                    <div class="grid">
                        <% for (let course of courses) { %>
                            <article class="card project-item">
  
                                <div class="card__content">
                                    <h1 class="project__name" style="background-color: rgb(217, 233, 228);">
                                        <%= course.name %>
                                    </h1>
                                    <h2 class="project__email">
                                        <%= course.courseCode %>
                                    </h2>
                                    <h3 class="project__email">
                                        <%= course.teacherId %>
                                    </h3>
                                    <h3 class="project__email">
                                        <%= course.year %>
                                    </h3>
                                    <p class="project__description">
                                        <%= course.description %>
                                    </p>
                                </div>
                                
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Courses Found!</h1>
                        <% } %>
            </main>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <%- include('../includes/end.ejs') %>