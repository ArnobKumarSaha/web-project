<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('./includes/navigation.ejs') %>

            <main>
                <% if (teachers.length > 0) { %>
                    <div class="grid">
                        <% for (let teacher of teachers) { %>
                            <article class="card teacher-item">
                                <header class="card__header">
                                    <h1 class="teacher__name">
                                        <%= teacher.name %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="teacher__email">
                                        <%= teacher.email %>
                                    </h2>
                                    <h3 class="teacher__email">
                                        <%= teacher.designation %>
                                    </h3>
                                    <h3 class="teacher__email">
                                        <%= teacher.phone %>
                                    </h3>
                                    <p class="teacher__description">
                                        <%= teacher.description %>
                                    </p>
                                </div>
                                <!--
                                <div class="card__actions">
                                    <a href="/admin/edit-teacher/<%= teacher._id %>?edit=true" class="btn">Edit</a> 
                                    <form action="/admin/delete-teacher" method="POST">
                                        <input type="hidden" value="<%= teacher._id %>" name="teacherId">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>
                                </div>
                                -->
                                
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No teachers Found!</h1>
                        <% } %>
            </main>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <%- include('./includes/end.ejs') %>